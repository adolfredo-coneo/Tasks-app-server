//init Project
npm init

//Install express
npm install express --save

//running the server
node server.js

//nodemon
npm install --save-dev nodemon

//axios
npm install axios

//TypeORM
npm install typeorm --save
npm install reflect-metadata --save
typeorm init

//PostgreSQL
npm install pg --save

//Typescript
npm install @types/node typescript --save-dev
npm install @types/express --save-dev

//typescript config file
npx tsconfig.json 

//ENV
npm install dotenv --save

//git
git init
git add .
git commit -m "initializing repository"
git branch -M main
git remote add origin https://github.com/adolfredo-coneo/Tasks-app-server.git
git push -u origin main


//Docker
docker build . -t aconeo/task-app-server
docker run -p 49160:4000 -d aconeo/task-app-server